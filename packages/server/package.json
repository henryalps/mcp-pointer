{
  "name": "@mcp-pointer/server",
  "version": "0.3.3",
  "description": "MCP Server for DOM element pointing - WebSocket bridge for element targeting",
  "repository": {
    "type": "git",
    "url": "https://github.com/etsd-tech/mcp-pointer.git",
    "directory": "packages/server"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-pointer": "dist/cli.cjs"
  },
  "scripts": {
    "build": "pnpm clean && esbuild src/cli.ts --outfile=dist/cli.cjs --format=cjs --bundle  --platform=node --target=node20 --sourcemap",
    "dev": "tsx watch src/cli.ts start",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "link:global": "pnpm build && pnpm link --global",
    "build:start": "node dist/cli.cjs start",
    "build:cli": "node dist/cli.cjs",
    "test": "jest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "commander": "^11.1.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@mcp-pointer/shared": "workspace:*",
    "@types/jest": "^30.0.0",
    "@types/ws": "^8.5.10",
    "esbuild": "catalog:",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1",
    "tsx": "catalog:",
    "typescript": "catalog:"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "mcp",
    "ai",
    "pointer",
    "websocket",
    "element-targeting"
  ],
  "author": "MCP Pointer Team",
  "license": "MIT"
}
